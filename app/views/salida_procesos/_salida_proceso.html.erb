<table class="table table-striped">
    <tbody>        
        <tr>
            <td></td>
            <td class='pull-right'>
              <%= link_to salida_procesos_path, class: "btn btn-ghost btn-gray" do %>        
                <i class="fa fa-mail-reply" aria-hidden="true"></i>                                      
                <%= t('.back_link') %>
              <% end %>  
            </td>
        </tr>
        <tr>
            <td><strong><%= t('clients.client.legal_representative') %></strong></td>
            <td><%= salida_proceso.client.legal_representative %></td>
        </tr>
        <tr>
            <td><strong><%= t('partidas.partida.tipo_cafe') %></strong></td>
            <td><%= salida_proceso.tipo_cafe %></td>
        </tr>
        <tr>
            <td><strong><%= t('salida_procesos.salida_proceso.total_sacos') %></strong></td>
            <td><%= salida_proceso.total_sacos %> Sacos</td>
        </tr>
        <tr>
            <td><strong><%= t('salida_procesos.salida_proceso.total_bolsas') %></strong></td>
            <td><%= salida_proceso.total_bolsas %> Bolsas</td>
        </tr>
        <tr>
            <td><strong><%= t('salida_procesos.salida_proceso.total_kilogramos_netos') %></strong></td>
            <td><%= salida_proceso.total_kilogramos_netos %> Kilogramos Netos</td>
        </tr>
        <tr>
            <td><strong><%=  t('salida_procesos.salida_proceso.created_at') %></strong></td>
            <td><%= l(salida_proceso.created_at, format: :medium) %></td>
        </tr>                                      
    </tbody>
</table>

<div class="row">
    <div class="col-sm-12">
        <h3 class="title-md hr text-center text-uppercase text-center">
          Entradas Afectadas
          <span class="badge"><%=  salida_proceso.entradas_afectadas.size %></span>          
        </h3>
    </div>
</div>

<div class="row-code">
  <div class="row row-pills row-pills-left" role="tabpanel">
      <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked" role="tablist">
            <% salida_proceso.entradas_afectadas.numero_entrada_ascendente.each_with_index do |entrada, index| %>
              <% if index.zero? %>
                <li role="presentation" class="active">
                  <% else %>
                <li role="presentation">
                  <% end %>
                  <a href="#entrada<%= entrada.id %>" aria-controls="entrada<%= entrada.id%>" 
                     role="tab" data-toggle="tab">
                      <%= "Entrada - #{padded_zeros_numero_entrada(entrada.numero_entrada)}" %></a>
              </li>
            <% end %>                      
        </ul>
      </div>
      <div class="col-md-9">
        <div class="tab-content">
            <% salida_proceso.entradas_afectadas.numero_entrada_ascendente.each_with_index do |entrada, index| %>
              <% if index.zero? %>
              <div role="tabpanel" class="tab-pane fade in active" id="entrada<%= entrada.id %>">
              <% else %>
              <div role="tabpanel" class="tab-pane fade in" id="entrada<%= entrada.id %>">
              <% end %>
                <% salida_proceso.line_item_salidas_para_entrada(entrada).each do |line_item_salida| %>                  
                  <%= render 'line_item_salida', line_item_salida: line_item_salida %>
                <% end %>
              </div>
              <% end %>                        
        </div>
      </div>
  </div>
</div>