<%= simple_form_for @merma, remote: true, html: { class: 'form-horizontal' }, wrapper: :horizontal_form,
  wrapper_mappings: {
    date: :multi_select_horizontal,
    datetime: :multi_select_horizontal
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :partida_id, as: :hidden, input_html: { value: partida.id } %>

  <%= f.input :merma_type, collection: enum_options_for_select(Merma, :merma_type), prompt: :translate, input_html: { class: 'merma_type' } %>

  <%= f.input :date_dry, wrapper: :horizontal_input_group, input_group_span_html: { class: "datetimepicker_for_date" } do %>
    <span class="input-group-addon text-info"><span class="glyphicon glyphicon-calendar text-info"></span></span>
    <%= f.input_field :date_dry, as: :string, class: "form-control", readonly: true %>      
  <% end %>
    
  <%= f.input :quantity, wrapper: :horizontal_input_group do %>    	
    <%= f.input_field :quantity, class: 'form-control merma-quantity' %>    
    <span class="input-group-addon">Kgs</span>
  <% end %>
          
  <%= f.input :observations %>    
 
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3">      
      <%= button_tag(type: :submit, class: 'btn btn-primary') do %>
        <i class="fa fa-check" aria-hidden="true"></i>    
        <%= value_button_submit f.object %>
      <% end %>
    </div>    
  </div>
<% end %>
