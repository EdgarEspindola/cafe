<div class="row">
    <div class='col-sm-12'><h1 class='title-md hr text-center text-uppercase'><%= t('.title') %></h1></div>
</div>

<div class="row">
    <div class='col-sm-12'>
      <div class="pull-right">
          <%= link_to new_client_path, class: "btn btn-ghost btn-primary" do %>   
            <i class="fa fa-plus-square"  aria-hidden="true"></i>
            <%= t('.new_client_link') %>
          <% end %>
      </div>         
    </div>
</div>

<hr class="hr-divider-xs"></hr>

<div class="row">
<% if @clients.blank? %>
    <p class='lead'>Aún no tienes clientes registrados.</p>    
<% else %>            
    <div class="table-responsive">
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr scope="row">
            <th><%= t('.clients.legal_representative') %></th>
            <th><%= t('.clients.address') %></th>
            <th><%= t('.clients.organization') %></th>
            <th><%= t('.clients.persona_fisica') %></th>
            <th><%= t('.clients.created_at') %></th>

            <th colspan="3"><%= t('.clients.options') %></th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each_with_index do |client, index| %>
            <tr>
              <td><%= client.legal_representative %></td>
              <td><%= client.address %></td>
              <td><%= client.organization %></td>
              <td><%= client.es_persona_fisica  %></td>
              <td><%= l client.created_at, format: :medium  %></td>              
              <td>
                <%= link_to client do %>
                  <i class="fa fa-eye" aria-hidden="true"></i>                    
                <% end %>
              </td>
              <td>
                <%= link_to edit_client_path(client) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>                    
                <% end %>              </td>  
              <td>
                <%= link_to client, method: :delete, data: { confirm: '¿Está usted seguro?' } do %>
                  <i class="fa fa-remove" aria-hidden="true"></i>                                      
                <% end %>
              </td>        
            </tr>
          <% end %>
        </tbody>
      </table>  
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
          <%= paginate @clients %>          
        </div>        
    </div>
<% end %>
</div>