<% unless cart_salida.line_item_salidas.empty? %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default panel-shopping-cart">
      <!-- Special deal 
        <div class="panel-heading text-uppercase">Don't miss the Special deal only today 20% OFF !!</div>
              -->
      <!-- Table -->
      <table class="table">
        <thead>
          <tr>
            <th>No. Entrada</th>
            <th>No. Partida</th>
            <th>Tipo de Cafe</th>
            <th>No. Sacos</th>
            <th>No. Bolsas</th>
            <th>Tara</th>
            <th>Kilogramos Netos</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render cart_salida.line_item_salidas.order("id DESC") %>
        </tbody>
        <tbody>
          <tr>
              <th></th>
              <th></th>
              <th>Total:</th>
              <th><%= "#{cart_salida.total_sacos} Sacos" %></th>
              <th><%= "#{cart_salida.total_bolsas} Bolsas" %></th>
              <th><%= "#{number_with_precision(cart_salida.total_tara, precision: 2)} Kgs" %></th>
              <th><%= "#{number_with_precision(cart_salida.total_kilogramos_netos, precision: 2)} Kgs" %></th>
          </tr>          
        </tbody>
      </table>
      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-6">
            <%= link_to 'Cancelar Salida', cart_salida, method: :delete, class: 'btn btn-default btn-sm', 
                  data: { confirm: 'Â¿Esta usted seguro?' } %>
          </div>
          <div class="col-sm-6 text-right">
            <a href="#" class="btn btn-primary btn-sm">Procceed to checkout</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Panel End -->
  </div>
</div>
<% end %>
