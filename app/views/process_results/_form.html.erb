<%= simple_form_for process_result, html: { class: 'form-vertical' },  wrapper: :horizontal_form,
  wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean,
    date: :multi_select_horizontal,
    datetime: :multi_select_horizontal
  } do |f| %>
    
<br/>

<%= f.error_notification %>    

<div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <label for="basic-url">No. RESULTADO DE PROCESO:</label>        
        <input type="text" class="form-control" 
               value="<%= padded_zeros_numero_entrada(process_result.salida_proceso.numero_salida) %>"
               readonly>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <label for="basic-url">TIPO DE CAFÃ‰:</label>        
        <input type="text" class="form-control" 
               value="<%= process_result.salida_proceso.tipo_cafe %>"
               readonly>
      </div>      
    </div>
    <div class="col-sm-4">
        <%= f.input :date, wrapper: :vertical_input_group do %>
            <span class="input-group-addon text-info">
                <span class="glyphicon glyphicon-calendar text-info"></span>                  
            </span>
            <%= f.input_field :date, as: :string, class: "form-control", readonly: true %>      
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label>CLIENTE:</label>        
        <input type="text" class="form-control" 
               value="<%= process_result.salida_proceso.client.legal_representative %>"
               readonly>
      </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <%= f.input :rango_lote, wrapper: :vertical_input_group %>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label for="basic-url">No. ORDEN DE PROCESO:</label>        
        <input type="text" class="form-control" 
               value="<%= padded_zeros_numero_entrada(process_result.salida_proceso.numero_salida) %>"
               readonly>
      </div>
    </div> 
</div>

<div class="row">
    <div class="col-sm-4">
      <%= f.input :fecha_inicio, wrapper: :vertical_input_group do %>
            <span class="input-group-addon text-info">
                <span class="glyphicon glyphicon-calendar text-info"></span>                  
            </span>
            <%= f.input_field :fecha_inicio, as: :string, class: "form-control", readonly: true %>      
        <% end %>
    </div>
    <div class="col-sm-4">
      <%= f.input :fecha_termino, wrapper: :vertical_input_group do %>
            <span class="input-group-addon text-info">
                <span class="glyphicon glyphicon-calendar text-info"></span>                  
            </span>
            <%= f.input_field :fecha_termino, as: :string, class: "form-control", readonly: true %>      
        <% end %>
    </div>      
    <div class="col-sm-4">
        <div class="form-group">
          <label>KGS A PROCESAR:</label>        
          <input type="text" class="form-control" 
               value="<%= process_result.salida_proceso.total_kilogramos_netos %>"
               readonly>
        </div>
    </div>  
</div>

<div class="row">
    <div class="col-sm-4">
      <%= f.input :humedad, wrapper: :vertical_input_group %>
    </div>
    <div class="col-sm-4">
      <%= f.input :fecha_inicio_humedad, wrapper: :vertical_input_group do %>
            <span class="input-group-addon text-info">
                <span class="glyphicon glyphicon-calendar text-info"></span>                  
            </span>
            <%= f.input_field :fecha_inicio_humedad, as: :string, class: "form-control", readonly: true %>      
        <% end %>
    </div>
    <div class="col-sm-4">
      <%= f.input :fecha_termino_humedad, wrapper: :vertical_input_group do %>
            <span class="input-group-addon text-info">
                <span class="glyphicon glyphicon-calendar text-info"></span>                  
            </span>
            <%= f.input_field :fecha_termino_humedad, as: :string, class: "form-control", readonly: true %>      
        <% end %>
    </div>
</div>

<%#*Calidades Inicio%>

<br/>

<div class="row">
      <div class="col-sm-3" style="border: 1px solid black;">
        <p class="lead text-center">CALIDADES</p>
      </div>
      <div class="col-sm-3 text-center" style="border: 1px solid black;">
        <p class="lead">KILOGRAMOS</p>      
      </div>
      <div class="col-sm-2 text-center" style="border: 1px solid black;">
        <p class="lead">%</p>            
      </div>
      <div class="col-sm-2 text-center" style="border: 1px solid black;">
        <p class="lead">SACOS</p>                  
      </div>
      <div class="col-sm-2 text-center" style="border: 1px solid black;">
        <p class="lead">KGS</p>                        
      </div>
</div>

<div id='qualities'>          
    <%= f.simple_fields_for :qualities do |quality| %>
      <%= render 'quality_fields', f: quality %>
    <% end %>    
</div>

<div class="row">
    <div class="col-sm-3">
      <input type="text" class="form-control" 
             value="TOTALES"
             readonly>
    </div>
    <div class="col-sm-3">
      <%= f.input :total_kilos_totales, wrapper: :vertical_input_group, label: false %>  
    </div>
    <div class="col-sm-2">
      <%= f.input :total_porcentaje, wrapper: :vertical_input_group, label: false %> 
    </div>
    <div class="col-sm-2">
      <%= f.input :total_sacos, wrapper: :vertical_input_group, label: false %> 
    </div>
    <div class="col-sm-2">
      <%= f.input :total_kilos_sacos, wrapper: :vertical_input_group, label: false %> 
    </div>
</div>

<%#*Calidades Fin%>

<div class="row">
    
    <div class="col-sm-6">
      <%= f.input :rendimiento %>      
    </div>
    
    <div class="col-sm-6">
      <%= f.input :observaciones %>            
    </div>
</div>


<% end %>